 <!-- Content Wrapper. Contains page content -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Novi poslanik</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                        <li class="breadcrumb-item active">Dodaj poslanika</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- Input addon -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Podaci o poslaniku</h3>
                        </div>
                        <form id="dodajPoslanikaForma">
                            <div class="card-body">
                                <div class="row">
                                    <div class="input-group mb-3 col-md-6">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-user-tie"></i>
                                            </span>
                                        </div>
                                        <input type="text" id="LicnoIme" name="LicnoIme" class="form-control" placeholder="Lično ime" required>
                                    </div>

                                    <div class="input-group mb-3 col-md-6">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-user-tie"></i>
                                            </span>
                                        </div>
                                        <input type="text" id="Prezime" name="Prezime" class="form-control" placeholder="Prezime" required>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-digital-tachograph"></i>
                                        </span>
                                    </div>
                                    <input type="text" id="Jmbg" name="Jmbg" class="form-control" placeholder="JMBG" required>
                                </div>

                                <div class="row">
                                    <div class="input-group mb-3 col-md-6">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-map-marker-alt"></i>
                                            </span>
                                        </div>
                                        <input type="text" id="AdresaStanovanja" name="AdresaStanovanja" class="form-control" placeholder="Adresa stanovanja" required>
                                    </div>

                                    <div class="input-group mb-3 col-md-6">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="fas fa-map-marker-alt"></i>
                                            </span>
                                        </div>
                                        <input type="text" id="MestoStanovanja" name="MestoStanovanja" class="form-control" placeholder="Mesto stanovanja" required>
                                    </div>
                                </div>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="far fa-calendar-alt"></i>
                                        </span>
                                    </div>
                                    <input type="date" id="DatumRodjenja" name="DatumRodjenja" class="form-control" placeholder="Datum rodjenja">
                                </div>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-map-marked-alt"></i>
                                        </span>
                                    </div>
                                    <input type="text" id="MestoRodjenja" name="MestoRodjenja" class="form-control" placeholder="Mesto rodjenja">
                                </div>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="far fa-envelope"></i>
                                        </span>
                                    </div>
                                    <input type="email" id="Email" name="Email" class="form-control" placeholder="Email" required>
                                </div>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="far fa-list-alt"></i>
                                        </span>
                                    </div>
                                    <input type="text" id="IzbornaLista" name="IzbornaLista" class="form-control" placeholder="Izborna lista" required>
                                </div>

                                <a id="sacuvajPoslanikaBtn" class="btn btn-primary">Sačuvaj</a>
                            </div>
                            <!-- /.card-body -->
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (left) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>

    <script>

        $('#dodajPoslanikaForma').validate({
            rules: {
                LicnoIme: {
                    required: true
                },
                Prezime: {
                    required: true
                },
                Jmbg: {
                    required: true
                },
                AdresaStanovanja: {
                    required: true
                },
                MestoStanovanja: {
                    required: true
                },
                Email: {
                    required: true
                },
                IzbornaLista: {
                    required: true
                }
            },
            messages: {
                LicnoIme: {
                    required: 'Ovo polje je obavezno!'
                },
                Prezime: {
                    required: 'Ovo polje je obavezno!'
                },
                Jmbg: {
                    required: 'Ovo polje je obavezno!'
                },
                AdresaStanovanja: {
                    required: 'Ovo polje je obavezno!'
                },
                MestoStanovanja: {
                    required: 'Ovo polje je obavezno!'
                },
                Email: {
                    required: 'Ovo polje je obavezno!'
                },
                IzbornaLista: {
                    required: 'Ovo polje je obavezno!'
                }
            }
        });

        $("#sacuvajPoslanikaBtn").click(function () {
            if ($("#dodajPoslanikaForma").valid()) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DodajPoslanika", "Poslanik")',
                    data: $("#dodajPoslanikaForma").serialize()
                })
                    .done(function (response) {
                        if (response.Success) {
                            swal("Gotovo", "Poslanik je uspešno dodat.", "success").then((value) => {
                                window.location = '@Url.Action("Index","Home")';
                            });
                        }
                    })
                    .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                        alert("FAIL");
                    });
            }
            else {
                swal({
                    title: "Upozorenje!",
                    text: "Popunite sva polja koja su obavezna!",
                    icon: "warning",
                    dangerMode: true,
                });
            }
    });
    </script>