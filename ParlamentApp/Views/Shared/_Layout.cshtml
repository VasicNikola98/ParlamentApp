    <script src="~/Content/dist/js/pages/dashboard.js"></script>

    <script>

        $("#dodajPoslanikaBtn").click(function () {

            var loader = document.getElementById("main_loader");
            loader.classList.remove("hide-spinner");

              $.ajax({
                url: '@Url.Action("DodajPoslanika", "Poslanik")'
              })
                  .done(function (response) {
                      loader.classList.add("hide-spinner");
                      $("#main_Container").html(response);
              })
              .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                  alert("FAIL");
              });
        });

        $("#dodajSednicuBtn").click(function () {

            var loader = document.getElementById("main_loader");
            loader.classList.remove("hide-spinner");

              $.ajax({
                url: '@Url.Action("DodajSednicu", "Sednica")'
              })
                  .done(function (response) {
                      loader.classList.add("hide-spinner");
                      $("#main_Container").html(response);
              })
              .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                  alert("FAIL");
              });
        });

        $("#prikaziSedniceBtn").click(function () {

            var loader = document.getElementById("main_loader");
            loader.classList.remove("hide-spinner");

              $.ajax({
                url: '@Url.Action("Index", "Sednica")'
              })
                  .done(function (response) {
                      loader.classList.add("hide-spinner");
                      $("#main_Container").html(response);
              })
              .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                  alert("FAIL");
              });
        });

        $("#dodajGrupuBtn1").click(function () {

            var loader = document.getElementById("main_loader");
            loader.classList.remove("hide-spinner");

              $.ajax({
                url: '@Url.Action("DodajGrupu", "PoslanickaGrupa")'
              })
                  .done(function (response) {
                      loader.classList.add("hide-spinner");
                      $("#main_Container").html(response);
              })
              .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                  alert("FAIL");
              });
        });

        $("#sveGrupeBtn").click(function () {

              $.ajax({
                url: '@Url.Action("Index", "PoslanickaGrupa")'
              })
                  .done(function (response) {
                      $("#main_Container").html(response);
              })
              .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                  alert("FAIL");
              });
        });
    </script>
</body>
</html>
